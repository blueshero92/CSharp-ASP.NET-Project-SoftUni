@using GamingZoneApp.ViewModels.Game
@model IEnumerable<AllGamesViewModel>

@if (!Model.Any())
{
    <h2 class="mb-4">No games found...</h2>
}
else
{
    <div class="row g-4">
        @foreach (AllGamesViewModel game in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="card h-100 shadow-sm">
                    <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@game.Title</h5>
                        <p class="card-text small text-muted">
                            Genre: <strong>@game.Genre</strong><br>
                            Developer: <strong>@game.Developer</strong><br>
                        </p>
                        <div class="mt-auto d-flex flex-column gap-2 w-100">
                            <div class="d-flex gap-2 w-100">
                                <a asp-controller="Games" asp-action="GameDetails" asp-route-id="@game.Id" class="btn btn-primary btn-sm w-50">Details</a>
                                <a asp-controller="Games" asp-action="EditGame" asp-route-id="@game.Id" class="btn btn-warning btn-sm w-50">Edit</a>
                            </div>
                            <a asp-controller="Games" asp-action="DeleteGame" asp-route-id="@game.Id" class="btn btn-danger btn-sm w-100">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

