@using GamingZoneApp.ViewModels.Game
@model IEnumerable<AllGamesViewModel>

@{
    ViewData["Title"] = "My Games";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <a asp-action="AddGame" asp-controller="Games" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> + Add Game
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="alert alert-info" role="alert">
        <p class="mb-0">
            Manage the games you have created. Use the card actions to view details, edit or delete a game.
        </p>
    </div>

    <partial name="_AllGamesPartial" model="@Model" />
</div>
